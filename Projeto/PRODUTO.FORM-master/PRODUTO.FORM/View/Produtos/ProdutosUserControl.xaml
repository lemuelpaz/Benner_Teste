<UserControl x:Class="PRODUTO.FORM.View.Produtos.ProdutosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PRODUTO.FORM.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.DataContext>
        <vm:ProdutoViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Botão principal -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#ec1444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f02470"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Botão secundário -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#e0e0e0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#bdbdbd"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#f9f9f9" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= FILTROS ================= -->
        <Border Background="White" CornerRadius="6" Padding="10" Margin="0 0 0 10" BorderBrush="#ddd" BorderThickness="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Nome:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="200" Margin="0,0,15,0" Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Código:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="120" Margin="0,0,15,0" Text="{Binding FiltroCodigo, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Content="Pesquisar" Command="{Binding ProdutoCommand}" CommandParameter="Pesquisar"/>
                <Button Content="Limpar" Style="{StaticResource SecondaryButton}" Command="{Binding ProdutoCommand}" CommandParameter="Limpar"/>
            </StackPanel>
        </Border>

        <!-- ================= GRID DE PRODUTOS ================= -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="10" BorderBrush="#ddd" BorderThickness="1">
            <DockPanel>
                <!-- Barra de Ações -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                    <Button Content="Incluir" Command="{Binding ProdutoCommand}" CommandParameter="Incluir"/>
                    <Button Content="Editar" Style="{StaticResource SecondaryButton}" Command="{Binding ProdutoCommand}" CommandParameter="Editar"/>
                    <Button Content="Excluir" Style="{StaticResource SecondaryButton}" Command="{Binding ProdutoCommand}" CommandParameter="Excluir"/>
                </StackPanel>

                <!-- DataGrid Produtos -->
                <DataGrid x:Name="dgProdutos"
                          ItemsSource="{Binding Produtos}"
                          SelectedItem="{Binding ProdutoSelecionado, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <!-- Coluna de Checkbox -->
                        <DataGridCheckBoxColumn Header="Selecionar" Binding="{Binding IsSelected}" Width="80"/>

                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="100"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="200"/>
                        <DataGridTextColumn Header="Valor" Binding="{Binding Preco, StringFormat={}{0:C}}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>

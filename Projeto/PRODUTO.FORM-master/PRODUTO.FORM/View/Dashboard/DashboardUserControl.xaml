<UserControl x:Class="PRODUTO.FORM.View.Dashboard.DashboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f5f5f5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Background="#fafafa" Margin="20">

            <!-- CABEÇALHO -->
            <StackPanel Margin="8,0,0,20">
                <TextBlock Text="Dashboard" FontSize="22" FontWeight="Bold"/>
                <TextBlock Text="Visão geral do sistema" Foreground="Gray" FontSize="14"/>
            </StackPanel>

            <!-- CARDS DE RESUMO -->
            <UniformGrid Columns="4">
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="👤 Pessoas Cadastradas" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="{Binding QtdPessoas}" FontSize="26" FontWeight="Bold" Foreground="#ec1444" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📦 Produtos Cadastrados" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="{Binding QtdProdutos}" FontSize="26" FontWeight="Bold" Foreground="#ec1444" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🛒 Total de Pedidos" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="{Binding QtdPedidos}" FontSize="26" FontWeight="Bold" Foreground="#ec1444" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📈 Valor Total em Vendas" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="{Binding ValorTotalVendas}" FontSize="26" FontWeight="Bold" Foreground="#ec1444" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- STATUS DE PEDIDOS -->
            <UniformGrid Columns="2" Margin="0,20,0,0">
                <!-- Pedidos Pendentes -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="⏱" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Pedidos Pendentes" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Quantidade:" Width="100"/>
                                <TextBlock Text="{Binding QtdPedidosPendentes}" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Valor Total:" Width="100"/>
                                <TextBlock Text="{Binding ValorPedidosPendentes}" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Pedidos Pagos -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                            <TextBlock Text="✔" FontSize="16" Margin="0,0,8,0" Foreground="#ec1444" VerticalAlignment="Center"/>
                            <TextBlock Text="Pedidos Pagos" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Quantidade:" Width="100"/>
                                <TextBlock Text="{Binding QtdPedidosPagos}" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Valor Recebido:" Width="100"/>
                                <TextBlock Text="{Binding ValorPedidosPagos}" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>            
        </StackPanel>
    </ScrollViewer>
</UserControl>
